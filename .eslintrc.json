{
  "root": true,
  "ignorePatterns": ["**/*"],
  "extends": [
    "plugin:import/recommended",
    "plugin:import/typescript",
    "plugin:prettier/recommended"
  ],
  "plugins": ["@nx", "import"],
  "settings": {
    "import/internal-regex": "^~books/",
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": "packages/*/tsconfig.json"
      },
      "eslint-import-resolver-custom-alias": {
        "alias": {
          "~books/types": "types/src/index.ts"
        },
        "packages": ["packages"]
      },
      "node": true
    }
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "type:config",
                "onlyDependOnLibsWithTags": ["type:config"]
              },
              {
                "sourceTag": "scope:shared",
                "onlyDependOnLibsWithTags": ["scope:shared", "type:config"]
              },
              {
                "sourceTag": "scope:client",
                "onlyDependOnLibsWithTags": [
                  "scope:client",
                  "scope:shared",
                  "type:config"
                ]
              },
              {
                "sourceTag": "scope:api",
                "onlyDependOnLibsWithTags": [
                  "scope:api",
                  "scope:shared",
                  "type:config"
                ]
              },
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": ["*"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "env": {
        "jest": true
      },
      "rules": {}
    }
  ],
  "rules": {
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "pathGroups": [{ "pattern": "~books/**", "group": "internal" }],
        "distinctGroup": true,
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "orderImportKind": "asc"
        },
        "warnOnUnassignedImports": true
      }
    ]
  }
}
