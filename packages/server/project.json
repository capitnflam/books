{
  "name": "server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/server/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/packages/front"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "server:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "server:build:development",
          "hmr": true,
          "mode": "debug"
        },
        "production": {
          "buildTarget": "server:build:production",
          "hmr": false
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/server/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/server"
      }
    },
    "typeorm": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "ts-node -r tsconfig-paths/register --project ./tsconfig.app.json ../../node_modules/typeorm/cli -d ./src/typeorm/cli.config.ts",
        "cwd": "packages/server"
      }
    },
    "migration-generate": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "nx run server:typeorm migration:generate ./src/typeorm/migrations/{args.name}",
        "cwd": "packages/server"
      }
    },
    "migration-run": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "nx run server:typeorm migration:run",
        "cwd": "packages/server"
      }
    },
    "migration-show": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "nx run server:typeorm migration:show",
        "cwd": "packages/server"
      }
    },
    "schema-drop": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "nx run server:typeorm schema:drop",
        "cwd": "packages/server"
      }
    }
  },
  "tags": ["scope:api"]
}
