generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("BOOKS_SERVER_DATABASE_URL")
}

model Author {
  id        Int       @id @default(autoincrement())
  name      String
  book      Book[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  deletedAt DateTime?
}

model Book {
  id          Int                  @id @default(autoincrement())
  title       String
  coverURL    String?
  isbn        String?              @unique
  synopsis    String?
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @default(now()) @updatedAt
  deletedAt   DateTime?
  authors     Author[]
  collections BooksInCollections[]
}

model Collection {
  id        Int                  @id @default(autoincrement())
  name      String
  createdAt DateTime             @default(now())
  updatedAt DateTime             @default(now()) @updatedAt
  deletedAt DateTime?
  books     BooksInCollections[]
}

model BooksInCollections {
  book         Book       @relation(fields: [bookId], references: [id])
  bookId       Int
  collection   Collection @relation(fields: [collectionId], references: [id])
  collectionId Int
  index        Int

  @@id([bookId, collectionId])
  @@unique([collectionId, index])
}
