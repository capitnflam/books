generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("BOOKS_SERVER_DATABASE_URL")
}

model Author {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}

model Book {
  id       Int     @id @default(autoincrement())
  title    String
  isbn     String  @unique
  author   Author? @relation(fields: [authorId], references: [id])
  authorId Int?
}
