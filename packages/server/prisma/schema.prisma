generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("BOOKS_SERVER_DATABASE_URL")
}

model Author {
  id   Int    @id @default(autoincrement())
  name String
  book Book[]
}

model Book {
  id       Int      @id @default(autoincrement())
  title    String
  coverURL String?
  isbn     String   @unique
  synopsis String?
  authors  Author[]
}
